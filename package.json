{
  "name": "vs-datatable",
  "version": "0.4.0",
  "description": "A lightweight Vue 3 datatable component with sorting, slots, and nested object support.",
  "type": "module",
  "private": false,
  "license": "MIT",
  "author": "Oregunwa Segun",
  "homepage": "https://github.com/oregs/vs-datatable",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oregs/vs-datatable.git"
  },
  "bugs": {
    "url": "https://github.com/oregs/vs-datatable/issues"
  },
  "keywords": [
    "vue",
    "datatable",
    "table",
    "vue3",
    "component"
  ],
  "main": "./dist/vs-datatable.umd.js",
  "module": "./dist/vs-datatable.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/vs-datatable.es.js",
      "require": "./dist/vs-datatable.umd.js"
    },
    "./style.css": "./dist/style.css",
    "./style.scss": "./src/styles/index.scss"
  },
  "files": [
    "dist",
    "src/styles"
  ],
  "scripts": {
    "dev": "vite",
    "clean": "rimraf dist",
    "build": "pnpm run clean && pnpm run type-check && pnpm run build-only && pnpm run build:types",
    "build:types": "vue-tsc --project tsconfig.build.json",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/"
  },
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.16.5",
    "@typescript-eslint/utils": "^8.44.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/eslint-plugin": "^1.3.13",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.36.0",
    "eslint-plugin-vue": "^10.5.0",
    "rimraf": "^6.0.1",
    "sass-embedded": "^1.93.2",
    "typescript": "~5.8.0",
    "vite": "^7.0.6",
    "vite-plugin-lib-inject-css": "^2.2.2",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.4"
  }
}
